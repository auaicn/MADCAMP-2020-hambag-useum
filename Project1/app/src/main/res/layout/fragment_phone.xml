<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:id="@+id/contact_view">

    <TextView android:id="@+id/contact_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="Contacts"
        android:fontFamily="@font/calibri_bold"
        android:textSize="40sp" />

    <TextView android:id="@+id/search_background"
        android:layout_below="@id/contact_title"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/layout_bg"/>

    <ImageView android:id="@+id/search_glass_img"

        android:src="@drawable/search_glass"

        android:layout_below="@id/contact_title"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp" />

    <EditText android:id="@+id/contact_search"

        android:layout_below="@id/contact_title"
        android:layout_toRightOf="@id/search_glass_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp"

        android:fontFamily="@font/calibri_bold" />

    <ListView android:id="@+id/contact_list_view"
        android:layout_below="@id/search_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp" />

    <ImageView android:id="@+id/profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/animal2" />
    <TextView android:id="@+id/contact_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView android:id="@+id/contact_phone_number"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>
